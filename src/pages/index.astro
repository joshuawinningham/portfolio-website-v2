---
import Layout from '../layouts/Layout.astro';
import project5 from '../assets/project5.png';
import project4 from '../assets/project4.png';
import project3 from '../assets/project3.png';
import project2 from '../assets/project2.png';
import project1 from '../assets/project1.png';

interface TechColor {
	bg: string;
	text: string;
}

interface TechColors {
	[key: string]: TechColor;
}

interface Project {
	title: string;
	description: string;
	image: string;
	fallbackImage: string;
	technologies: string[];
	techColors: TechColors;
	links: {
		github: string;
		live: string;
	};
}

const pageTitle = "Josh Winningham - Full Stack Developer";
const pageDescription = "Full Stack Developer specializing in Python, JavaScript, and modern web technologies. Check out my latest projects and get in touch.";
const ogImage = "https://images.pexels.com/photos/546819/pexels-photo-546819.jpeg";

const projects: Project[] = [
	{
		title: "Email KPI Dashboard",
		description: "Modern email client and analytics dashboard featuring real-time email tracking, detailed open event history, and comprehensive KPI monitoring. Built with React and TypeScript, it includes interactive data visualization and a responsive interface. Powered by Fastify and Supabase backend with Google APIs and Resend integration.",
		image: project5.src,
		fallbackImage: "https://images.pexels.com/photos/7376/startup-photos.jpg",
		technologies: ["React", "TypeScript", "Chart.js", "Tailwind CSS", "Fastify", "Supabase", "Google APIs", "Resend", "Node.js"],
		techColors: {
			"React": { bg: "bg-cyan-100 dark:bg-cyan-900", text: "text-cyan-800 dark:text-cyan-200" },
			"TypeScript": { bg: "bg-blue-100 dark:bg-blue-900", text: "text-blue-800 dark:text-blue-200" },
			"Chart.js": { bg: "bg-green-100 dark:bg-green-900", text: "text-green-800 dark:text-green-200" },
			"Tailwind CSS": { bg: "bg-teal-100 dark:bg-teal-900", text: "text-teal-800 dark:text-teal-200" },
			"Fastify": { bg: "bg-red-100 dark:bg-red-900", text: "text-red-800 dark:text-red-200" },
			"Supabase": { bg: "bg-emerald-100 dark:bg-emerald-900", text: "text-emerald-800 dark:text-emerald-200" },
			"Google APIs": { bg: "bg-indigo-100 dark:bg-indigo-900", text: "text-indigo-800 dark:text-indigo-200" },
			"Resend": { bg: "bg-purple-100 dark:bg-purple-900", text: "text-purple-800 dark:text-purple-200" },
			"Node.js": { bg: "bg-lime-100 dark:bg-lime-900", text: "text-lime-800 dark:text-lime-200" }
		},
		links: {
			github: "https://github.com/joshuawinningham/email-kpi",
			live: "https://www.10xinbox.com/"
		}
	},
	{
		title: "Miles & Steps Tracker",
		description: "A modern web application for tracking daily walking/running activities. Features include miles tracking, automatic steps calculation, calorie monitoring, weight tracking, and cross-device synchronization. Built with Astro, TypeScript, Chart.js, and Firebase for real-time data sync.",
		image: project4.src,
		fallbackImage: "https://images.pexels.com/photos/235922/pexels-photo-235922.jpeg",
		technologies: ["Astro", "TypeScript", "Chart.js", "Tailwind CSS", "Firebase"],
		techColors: {
			Astro: { bg: "bg-purple-100 dark:bg-purple-900", text: "text-purple-800 dark:text-purple-200" },
			TypeScript: { bg: "bg-blue-100 dark:bg-blue-900", text: "text-blue-800 dark:text-blue-200" },
			"Chart.js": { bg: "bg-green-100 dark:bg-green-900", text: "text-green-800 dark:text-green-200" },
			"Tailwind CSS": { bg: "bg-teal-100 dark:bg-teal-900", text: "text-teal-800 dark:text-teal-200" },
			Firebase: { bg: "bg-orange-100 dark:bg-orange-900", text: "text-orange-800 dark:text-orange-200" }
		},
		links: {
			github: "https://github.com/joshuawinningham/miles-steps-tracker",
			live: "https://miles-steps-tracker.vercel.app"
		}
	},
	{
		title: "Rectangle Area Calculator",
		description: "A Python web application that calculates the area of rectangles. Features both command-line and web interfaces, built with Flask and deployed on Vercel. Includes real-time calculations and a responsive design.",
		image: project1.src,
		fallbackImage: "https://images.pexels.com/photos/2004161/pexels-photo-2004161.jpeg",
		technologies: ["Python", "Flask", "Tailwind CSS"],
		techColors: {
			Python: { bg: "bg-blue-100 dark:bg-blue-900", text: "text-blue-800 dark:text-blue-200" },
			Flask: { bg: "bg-gray-100 dark:bg-gray-900", text: "text-gray-800 dark:text-gray-200" },
			"Tailwind CSS": { bg: "bg-teal-100 dark:bg-teal-900", text: "text-teal-800 dark:text-teal-200" }
		},
		links: {
			github: "https://github.com/joshuawinningham/rectangle-area-calculator",
			live: "https://rectangle-area-calculator.vercel.app"
		}
	},
	{
		title: "Feet & Inches to Inches Converter",
		description: "A web application that converts feet and inches to total inches, featuring a visual blocks representation. Built with Python/Flask and styled with Tailwind CSS, this app provides input validation and a modern UI for easy unit conversion.",
		image: project2.src,
		fallbackImage: "https://images.pexels.com/photos/590022/pexels-photo-590022.jpeg",
		technologies: ["Python", "Flask", "Tailwind CSS"],
		techColors: {
			"Python": { bg: "bg-blue-100 dark:bg-blue-900", text: "text-blue-800 dark:text-blue-200" },
			"Flask": { bg: "bg-gray-100 dark:bg-gray-900", text: "text-gray-800 dark:text-gray-200" },
			"Tailwind CSS": { bg: "bg-teal-100 dark:bg-teal-900", text: "text-teal-800 dark:text-teal-200" }
		},
		links: {
			github: "https://github.com/joshuawinningham/feet-inches-to-inches-converter",
			live: "https://feet-inches-to-inches-converter.vercel.app"
		}
	},
	{
		title: "Little Lemon Restaurant",
		description: "A modern, responsive restaurant website featuring an online reservation system, menu specials, and customer testimonials. Built with React and styled with CSS3, this project showcases a beautiful and functional design with features like online booking, special menu items, and location information.",
		image: project3.src,
		fallbackImage: "https://images.pexels.com/photos/67468/pexels-photo-67468.jpeg",
		technologies: ["React", "JavaScript", "CSS3"],
		techColors: {
			"React": { bg: "bg-cyan-100 dark:bg-cyan-900", text: "text-cyan-800 dark:text-cyan-200" },
			"JavaScript": { bg: "bg-yellow-100 dark:bg-yellow-900", text: "text-yellow-800 dark:text-yellow-200" },
			"CSS3": { bg: "bg-blue-100 dark:bg-blue-900", text: "text-blue-800 dark:text-blue-200" }
		},
		links: {
			github: "https://github.com/joshuawinningham/react-capstone",
			live: "https://react-capstone-swart.vercel.app"
		}
	}
];
---

<Layout title={pageTitle} description={pageDescription} image={ogImage}>
	<!-- Hero Section -->
	<section class="min-h-screen flex items-center justify-center bg-white dark:bg-gray-900 px-4">
		<div class="max-w-4xl mx-auto text-center">
			<h1 class="text-4xl md:text-7xl font-bold tracking-tight text-gray-900 dark:text-white mb-6">
				<span class="block">Josh Winningham</span>
				<span class="block text-2xl md:text-4xl text-gray-500 dark:text-gray-400 mt-4">Full Stack Developer</span>
			</h1>
			<p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mb-12">
				Building elegant solutions to complex problems with modern web technologies.
			</p>
			<div class="flex justify-center gap-6">
				<a href="#projects" class="px-8 py-3 text-sm font-medium rounded-full bg-gray-900 text-white dark:bg-white dark:text-gray-900 hover:opacity-90 transition-opacity">
					View Projects
				</a>
				<a href="#contact" class="px-8 py-3 text-sm font-medium rounded-full border border-gray-900 dark:border-white text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
					Contact Me
				</a>
			</div>
		</div>
	</section>

	<!-- Projects Section -->
	<section id="projects" class="py-24 bg-gray-50 dark:bg-gray-800">
		<div class="max-w-7xl mx-auto px-4">
			<h2 class="text-3xl font-bold text-center mb-16 text-gray-900 dark:text-white">Selected Projects</h2>
			<div class="grid grid-cols-1 gap-12">
				{projects.map((project, index) => (
					<div class="flex flex-col md:flex-row gap-8 items-center">
						<div class={`w-full md:w-1/2 ${index % 2 === 1 ? 'md:order-2' : ''}`}>
							<div class="relative group">
								<img 
									src={project.image} 
									alt={project.title}
									class="w-full h-[400px] object-cover rounded-lg shadow-lg"
									loading="lazy"
									onerror={`this.src='${project.fallbackImage}'`}
								/>
								<div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-lg"></div>
							</div>
						</div>
						<div class={`w-full md:w-1/2 ${index % 2 === 1 ? 'md:order-1' : ''}`}>
							<h3 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">{project.title}</h3>
							<p class="text-gray-600 dark:text-gray-300 mb-6">{project.description}</p>
							<div class="flex flex-wrap gap-2 mb-6">
								{project.technologies.map((tech) => (
									<span class={`px-3 py-1 rounded-full text-sm ${project.techColors[tech].bg} ${project.techColors[tech].text}`}>
										{tech}
									</span>
								))}
							</div>
							<div class="flex gap-4">
								<a 
									href={project.links.github}
									target="_blank"
									rel="noopener noreferrer"
									class="inline-flex items-center text-gray-900 dark:text-white hover:text-gray-600 dark:hover:text-gray-300"
								>
									GitHub
									<span class="ml-1">↗</span>
								</a>
								<a 
									href={project.links.live}
									target="_blank"
									rel="noopener noreferrer"
									class="inline-flex items-center text-gray-900 dark:text-white hover:text-gray-600 dark:hover:text-gray-300"
								>
									Live Demo
									<span class="ml-1">↗</span>
								</a>
							</div>
						</div>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- About Section -->
	<section id="about" class="py-24 bg-white dark:bg-gray-900">
		<div class="max-w-3xl mx-auto px-4">
			<h2 class="text-3xl font-bold text-center mb-16 text-gray-900 dark:text-white">About</h2>
			<div class="space-y-6 text-gray-600 dark:text-gray-300">
				<p class="text-lg leading-relaxed">
					I'm a Full Stack Developer with a passion for creating efficient, scalable web applications. 
					I'm dedicated to building elegant, user-focused solutions that blend creativity, technology, and thoughtful design to solve real-world problems and deliver meaningful results. I am currently working with the technologies listed below.
				</p>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">
					<div>
						<h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Frontend</h3>
						<ul class="space-y-2">
							<li>React</li>
							<li>TypeScript</li>
							<li>Tailwind CSS</li>
							<li>Chart.js</li>
							<li>Astro</li>
							<li>Vercel</li>
						</ul>
					</div>
					<div>
						<h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Backend</h3>
						<ul class="space-y-2">
							<li>Node.js & Fastify</li>
							<li>Python & Flask</li>
							<li>Supabase</li>
							<li>Google APIs</li>
							<li>Resend</li>
							<li>Render</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Section -->
	<section id="contact" class="py-24 bg-gray-50 dark:bg-gray-800">
		<div class="max-w-3xl mx-auto px-4 text-center">
			<h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white">Let's Connect</h2>
			<p class="text-lg text-gray-600 dark:text-gray-300 mb-12">
				Interested in working together? Let's discuss your project.
			</p>
			<div class="flex justify-center gap-6">
				<a 
					href="https://github.com/joshuawinningham"
					target="_blank"
					rel="noopener noreferrer"
					class="px-8 py-3 text-sm font-medium rounded-full bg-gray-900 text-white dark:bg-white dark:text-gray-900 hover:opacity-90 transition-opacity"
				>
					GitHub
				</a>
				<a 
					href="https://linkedin.com/in/joshuawinningham"
					target="_blank"
					rel="noopener noreferrer"
					class="px-8 py-3 text-sm font-medium rounded-full border border-gray-900 dark:border-white text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
				>
					LinkedIn
				</a>
				<a 
					href="mailto:joshua.winningham@gmail.com"
					class="px-8 py-3 text-sm font-medium rounded-full border border-gray-900 dark:border-white text-gray-900 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors"
				>
					Email
				</a>
			</div>
		</div>
	</section>
</Layout>